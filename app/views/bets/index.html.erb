<div class="container">


 <div class=" col-sm-offset-3 col-sm-6 col-xs-12">


<div class="text-center">

    <img src=<%= current_user.photo_url ? cl_image_path(current_user.photo, :width=>150, :height=>150, crop: :fill) : image_path("user.jpeg", crop: :crop) %> class="card-user-big" >

  </div>


  <h3 class="h1-index"><%= current_user.user_name ? current_user.user_name : current_user.email %></h3>
  <h4 class="h4-index">SOMME DE MES GAINS</h4>
  <h3 class="h2-index"><%= @reward %>€</h3>

  <h4 class="h4-index">MES PARIS</h4>

  <!-- Nav tabs -->
  <ul class="nav nav-pills-index" role="tablist">

    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab"><p><%= @bets_pending.count %></p><h6>À valider</h6></a></li>
    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab"><p><%= @bets_ongoing.count %></p><h6>En cours</h6></a></li>
    <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab"><p><%= @bets_closed.count %></p><h6>Terminés</h6></a></li>

  </ul>

  </div>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="home">




    <div class=" col-sm-offset-3 col-sm-6 col-xs-12">


      <% @bets_pending.each do |bet| %>



        <div class="card">

          <a href="" class=""></a>
          <%= link_to "", bet_path(bet), class: "card-link" %>
          <div class="card-body"
               style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= bet.game.photo.present? ? cl_image_path(bet.game.photo, crop: :fill) :  image_path("challenge.jpeg") %>');">

            <div class="card-description">
              <h2><%= link_to bet.game.title, bet_path(bet) %></h2>
              <div class="btn-bety-red">
                Cliquez pour participer ou refuser
              </div>

            </div>


           <img src=<%= bet.game.bets.find_by(challenger: true).user.photo_url.present? ? cl_image_path(bet.game.bets.find_by(challenger: true).user.photo_url, crop: :fill) : image_path("user.jpeg") %> class="card-user" >

          </div>
            <div class="card-footer">
              <p><%= bet.game.description %></p>
              <% if bet.game.bets.count != nil && bet.game.price != nil%>
              <p><%= "Cagnotte en cours : #{bet.game.bets.count * bet.game.price}€"%></p>
              <% else %>
              <p><%= "Just for Fun"%></p>
              <% end %>

            </div>


      </div>
       <% end %>

      <div class="card">
      <% if @bets_pending.count == 0 %>
      <br>
      <h6 class= "text-center">Aucun pari à valider en ce moment !</h6>

          <div class="gif-empty-challenge"
               style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path("empty-state-illustrations.gif")%>');">
          </div>
        <% end %>
        </div>
    </div>

  <!-- <a class="card-link" href="#" ></a> -->

  </div>
    <div role="tabpanel" class="tab-pane" id="profile">
      <div class=" col-sm-offset-3 col-sm-6 col-xs-12">


