<div class="hidden-xs ">
  <div class="navbar-wagon">
    <!-- Logo -->

    <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
    <% end %>


    <!-- Right Navigation -->


    <% if user_signed_in? %>

    <!-- Links when logged in -->
    <%= link_to "Games ongoing", bets_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Create a game", new_game_path, class: "navbar-wagon-item navbar-wagon-link" %>


    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">

        <img src=<%= user_signed_in? && current_user.photo_url ? cl_image_path(current_user.photo) : image_path("user-circle.svg") %> class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">


        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to edit_user_registration_path do %>
            <i class="fa fa-pencil-alt"></i> <%= t(".profile", default: "Edit Profile") %>
            <% end %>
          </li>

          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
    <!-- Login link (when logged out) -->
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>
</div>
<!-- Dropdown list appearing on mobile only -->
<!-- <div class=row>
 -->
 <div class="navbar-mobile hidden-sm hidden-md hidden-lg">
    <ul class="list-inline">
      <% unless controller_name == 'pages' %>
      <li>
        <%= link_to bets_path do %>
        <i class="fas fa-clock"></i>
        <% end %>
      </li>
      <li>
        <%= link_to new_game_path do %>
        <i class="fas fa-plus-circle"></i>
        <% end %>
      </li>
      <% end %>
      <li>
        <div class="dropdown">
          <i class="fas fa-user" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to edit_user_registration_path do %>
              <i class="fa fa-pencil-alt"></i> <%= t(".profile", default: "Edit profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </li>
    </ul>
  </div>
